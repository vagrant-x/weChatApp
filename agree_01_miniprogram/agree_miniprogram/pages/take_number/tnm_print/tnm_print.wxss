/* pages/take_number/tnm_print/tnm_print.wxss */

.view-head{
    height: 40px;
    text-align: center;
    font-size: 20px;
}

.view-body{
    margin-left: 5px;
    margin-right: 5px;
}
.view-body-head{
    text-align: center;
    background-color: rgb(166, 182, 226);
    border-bottom: 3px dashed #000;
}
.v-number{
    font-size: 20px;
}
.view-body-body{
    background-color: rgb(211, 211, 211);
    padding-top: 10px;
    padding-bottom: 10px;
}

.view-body-body > view{
    padding-left: 10px;
    padding-right: 10px;
    margin-top: 8px;
    flex-direction: row;
    justify-content: space-between;

}
.view-body-body > view:first-child{
    margin-top: 0px;
}
.view-body-body > view > text{
    width: 50%;
    display: inline-block;
}
.view-body-body-text2{
    text-align: right;
}

.view-bottom{
    margin-top: 20px;
}
.view-bottom > button{
    background-color: rgb(159, 153, 238);
}