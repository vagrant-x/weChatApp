/* pages/newsList/newsList.wxss */
.head{
    background-color: red;
    height: 50px;
    /* overflow: hidden; */
    box-sizing: border-box;
    padding-top: 10px;
}

.head input{
    width: 80%;
    background-color: white;
    height: 30px;
    /* margin-top: 10px; */
    margin-left: auto;
    margin-right: auto;
    border-radius: 5px;
    font-size: 12px;
    padding-left: 6px;
    padding-right: 6px;
}

/* 头部样式 */
.type-pad{
    height: 40px;
    border-bottom: 1px solid #f0f0f0;
    line-height: 40px;
}
.type-pad text{
    margin-left: 20px;
    font-size: 14px;
}
.type-pad text.select{
    color: red;
}

/* 用户头像、名称等信息样式 */
.body{
    background-color: #f0f0f0;
}
.body .item:first-child{
    padding-top: 0px;
}
.body .item{
    margin-top: 10px;
    padding-top: 10px;
    padding-bottom: 5px;
    background-color: #fff;
}
.body .item .user-info{
    height: 50px;
    padding-left: 10px;
}
.body .item .user-info image{
    width: 50px;
    height: 50px;
    border-radius: 50px;
    vertical-align: middle;
}
.body .item .user-info text{
    font-size: 14px;
    margin-left: 10px;
}
.body .item .user-info .focus{
    padding-left: 10px;
    border-left: 1px solid #cccccc;
}
.body .item .user-info text.no-focus{
    color: red;
}

/* 视频 */
.body .item .title{
    font-size: 14px;
    padding: 10px;
}
.body .item .content{
    padding: 0 10px;
}
.body .item .content video{
    width: 100%;
    height: 180px;
}
.body .item .content image{
    width: 100%;
    height: 180px;
}