.card {
  margin: 10px;
  position: relative;
  /** 相对定位 **/
}

.bg {
  width: 100%;
  border-radius: 5px;
  box-shadow: 0 0 5px #5f687e;
}

.logo {
  width: 120px;
  height: 60px;
  position: absolute;
  /** 绝对定位 **/
  top: 10px;
  right: 10px;
}

.info {
  position: absolute;
  left: 30px;
  bottom: 30px;
  font-size: 16px;
  color: #5f687e;
}